pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "quickdelivery:latest"
        HELM_RELEASE = "quickdelivery"
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Cantarella/jenkins-test.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build(DOCKER_IMAGE)
                }
            }
        }
    }
}